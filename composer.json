{
    "name": "ufrgs-hyman/meican2",
    "description": "Web NMS to request circuits and manage topologies in DCNs",
    "keywords": ["meican", "dynamic", "circuit", "network", "reservation", "topology", "nsi"],
    "homepage": "http://meican.cipo.rnp.br/",
    "type": "project",
    "license": "BSD-2-License",
    "support": {
        "wiki": "https://wiki.rnp.br"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.5.0",
        "yiisoft/yii2": "2.0.6",
        "yiisoft/yii2-swiftmailer": "2.0.4",
        "yiisoft/yii2-jui": "2.0.4",
        "yiisoft/yii2-bootstrap": "2.0.5",
        "thiagotalma/yii2-fullcalendar": "2.0.0",
        "npm-asset/vis": "4.11.0",
        "npm-asset/leaflet": "0.7.7",
        "bower-asset/spectrum": "1.8.0",
        "bower-asset/slimscroll": "1.3.7",
        "bower-asset/bootstrap" : "3.3.5",
        "bower-asset/fontawesome" : "4.4.0",
        "bower-asset/ionicons" : "2.0.1",
        "bower-asset/icheck" : "1.0.2",
        "bower-asset/jquery-hoverIntent" : "1.8.1",
        "bower-asset/timepicker" : "1.6.3"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "2.0.4",
        "yiisoft/yii2-debug": "2.0.5",
        "yiisoft/yii2-gii": "2.0.4"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "php yii migrate --interactive=0",
            "php yii init/services/crontab/start"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
